@model IEnumerable<Assignment5MusicShop.Models.Music>

@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Music List";
}

<h1>@ViewData["Title"]</h1>

@using Microsoft.AspNetCore.Mvc.Rendering

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="genreDropdown">Genre:</label>
        <select id="genreDropdown" name="searchGenre" asp-items="ViewBag.Genres" class="form-control">
            <option value="">All Genres</option>
        </select>
    </div>
    <div class="form-group">
        <label for="performerDropdown">Performer:</label>
        <select id="performerDropdown" name="searchPerformer" asp-items="ViewBag.Performers" class="form-control">
            <option value="">All Performers</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Performer)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="submit" value="Add to Cart" class="btn btn-success" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
